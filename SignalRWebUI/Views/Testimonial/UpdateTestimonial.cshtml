@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialId"/>
                            <div class="form-group">
                                <label for="name">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="title">Ünvan</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Görsel Url</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="comment">Yorum</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Referans Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>